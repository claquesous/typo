<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>
<% end %>

<%= form_tag(:action => :merge, :id => "merge_form", :method => :put ) do %>
  <h4><%= _("Merge Articles") %></h4>
  <label for="merge_article_id"><%= _("Article id:") %></label>
  <%= number_field_tag :merge_form, :id %>
  <%= submit_tag "Merge" %>
<% end %>
