<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>
<% end %>

<%= form_tag(form_action, :id => "merge_form", :class => className) do %>
  <h4><%= _("Merge Articles") %>
  <label for="merge_article_id"><%= _("Article id:") %>
    <% number_field :merge_article_id, 0 %>
    <% button_to "Merge", :action => :merge %>
  </label>
<% end %>
